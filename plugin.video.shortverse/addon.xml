<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.shortverse" name="Shortverse" version="0.0.1" provider-name="lucianorc">
	<requires>
		<import addon="xbmc.python" version="3.0.0" />
		<import addon="script.module.requests" version="2.27.1" />
		<import addon="script.module.youtube.dl" version="21.303.0" />
	</requires>
	<extension point="xbmc.python.pluginsource" library="addon.py">
		<provides>video</provides>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en_GB">Shortverse Add-on</summary>
		<description lang="en_GB">
			A simple indenpendent Kodi client to watch independent short films published in
			Shortverse
		</description>
		<license>GNU GENERAL PUBLIC LICENSE. Version 3, 29 June 2007</license>
		<source>https://github.com/lucianorc/plugin.video.shortverse</source>
		<website>https://shortverse.com</website>
		<platform>all</platform>
		<language>en</language>
		<assets>
			<icon>resources/media/icon.png</icon>
			<fanart>resources/media/fanart-1.jpg</fanart>
		</assets>
		<reuselanguageinvoker>true</reuselanguageinvoker>
	</extension>
</addon>